{
  "compilerOptions": {
    "rootDir": "./src/",
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "preserve",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "pretty": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  }
}